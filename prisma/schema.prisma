generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PlanningRoom {
  id      String @id @default(uuid())
  title   String
  tasks   Task[]
  ownerId String @map("owner_id")
  owner   User   @relation(fields: [ownerId], references: [id])

  @@map("planning_room")
}

enum TaskStatusEnum {
  PENDING
  COMPLETED
}

model Task {
  id             String         @id @default(uuid())
  description    String
  points         Int
  status         TaskStatusEnum @default(PENDING)
  planningRoomId String         @map("planning_room_id")
  PlanningRoom   PlanningRoom   @relation(fields: [planningRoomId], references: [id])

  @@map("task")
}

model User {
  id           String         @id @default(uuid())
  uid          String         @unique
  name         String
  email        String         @unique
  photoUrl     String?
  coins        Int            @default(0)
  PlanningRoom PlanningRoom[]

  @@map("user")
}
