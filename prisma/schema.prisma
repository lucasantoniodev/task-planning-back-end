generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PlanningRoom {
  id                      String                    @id @default(uuid())
  title                   String
  tasks                   Task[]
  ownerId                 String                    @map("owner_id")
  owner                   User                      @relation(fields: [ownerId], references: [id])
  ParticipantPlanningRoom ParticipantPlanningRoom[]

  @@map("planning_room")
}

model ParticipantPlanningRoom {
  id             String       @id @default(uuid())
  userId         String       @map("user_id")
  user           User         @relation(fields: [userId], references: [id])
  planningRoomId String       @map("planning_room_id")
  planningRoom   PlanningRoom @relation(fields: [planningRoomId], references: [id])

  @@map("participant_planning_room")
}

model Task {
  id             String       @id @default(uuid())
  description    String
  points         Int
  planningRoomId String       @map("planning_room_id")
  PlanningRoom   PlanningRoom @relation(fields: [planningRoomId], references: [id])

  @@map("task")
}

model User {
  id                       String                    @id @default(uuid())
  uid                      String                    @unique
  name                     String
  email                    String?
  coins                    Int                       @default(0)
  PlanningRoom             PlanningRoom[]
  ParticipantsPlanningRoom ParticipantPlanningRoom[]

  @@map("user")
}
